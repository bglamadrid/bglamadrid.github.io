mixin header(data, environment)
  -
    const logoData = data.business.logo.default;
    const logoSrc = logoData.aliasedUrl ? require(logoData.aliasedUrl) : logoData.absoluteUrl;
    const logoTargetUrl = environment.urls.home;
  header(class='sticky z-10 flex flex-nowrap justify-between items-center top-0 left-0 right-0 h-header shadow border-t-2 border-slate-900 bg-slate-100 dark:bg-slate-600')
    a(class='block mx-4'
    href=logoTargetUrl)
      img(class='h-full'
      src=logoSrc
      alt=data.business.name)
    nav(class='flex-grow basis-80 flex flex-wrap items-center justify-end mx-4 sm:mx-0')
      each n in data.site.navigation.links
        a(class='w-full my-1 font-bold uppercase text-right text-black sm:my-0 sm:mx-4 sm:w-auto hover:animate-pulse dark:text-white'
        href=n.url)=n.title
